#wrap
  #header
    .structure
      a#logo(href="/")
      h1 @OpenBankProject

  #main
    .structure

      #create 
      p Select Account

      #list
        ul
          - each account in accounts
            li 
              a(href="./?bank_alias=#{account.bank_alias}&account_alias=#{account.account_alias}&owner_description=#{account.owner_description}") #{account.owner_description}


      h1 The singing transactions of #{owner_description}!&nbsp; 
      if (cached)
        p (cached data )
      else 
        p (latest data)
      
      #controls
        input(type="image",src="./images/play_button.png",align="absmiddle",value="play",onclick="startPlaying()")
        input(type="image",src="./images/stop_button.png",align="absmiddle",value="stop",onclick="stopPlaying()")
      
      #plugin-controls
        //plugin can put stuff here

      #list
        ul
          - each trans in transactions
            li(id=trans.uuid)
              a(name=trans.uuid)
              !{trans.details.value.amount}
            div.smalltext(id="other_account_holder_" + trans.uuid)
              !{trans.other_account.holder.name}
            script(type='text/javascript')
              //- Add each transaction to a sound queue. The sound queue will be played once samples are loaded.
              addData(#{trans.details.value.amount}, "#{trans.details.completed}", "#{trans.uuid}");
