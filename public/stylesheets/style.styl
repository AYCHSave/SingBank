@import url('reset.css')

html
body
  height: 100%

body
  font-family: "HelveticaNeueLight", "HelveticaNeue-Light", "Helvetica Neue Light", "HelveticaNeue", "Helvetica Neue", 'TeXGyreHerosRegular', "Helvetica", "Tahoma", "Geneva", "Arial", sans-serif
  font-weight: 300
  font-stretch: normal
  font-size: 13px
  text-align: center
  text-stroke: 1px rgba(255, 255, 255, 0.1)
  color: #555

a
  color: #0099CC
  text-decoration: none

  &:hover
    text-decoration: underline

form
  .field
    padding: 0 0 10px
  label
    display: block
    font-size: 18px
    padding: 0 0 5px
  textarea
  input.text
    display: block
    width: 610px
    background: #ffffff
    border: 1px solid #aaaaaa
    font-size: 16px
    padding: 5px
  input.checkbox
    margin: 0
  input.submit
    font-size: 18px

#wrap
  min-height: 100%

.structure
  width: 620px
  margin: 0 auto

#header
  position: relative
  background: #121212 /* Old browsers */
  background: -moz-linear-gradient(top,  #121212 0%, #333333 98%) /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#121212), color-stop(98%,#333333)) /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #121212 0%,#333333 98%) /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #121212 0%,#333333 98%) /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #121212 0%,#333333 98%) /* IE10+ */
  background: linear-gradient(top,  #121212 0%,#333333 98%) /* W3C */
  padding: 40px

  h1
  h2
    color: #ffffff

  h1
    line-height: 1.1em
    font-size: 32px
    color: #ffffff

  h2
    margin: 20px 0 0
    font-size: 20px
    color: #dddddd

  a#logo
    position: absolute
    top: 10px
    left: 20px
    width: 126px
    height: 93px
    background: transparent url('../images/logo.png') no-repeat 50% 50%
    text-indent: -9999em
    overflow: hidden

#main
  overflow: auto
  margin: 1px 0 0
  border-top: 1px solid #333333
  min-height: 400px
  background: #ffffff url('../images/main_bg.jpg') repeat-x 50% 0
  padding-bottom: 82px

  .structure
    padding: 30px 0
    text-align: left

    h2
      font-size: 24px
      margin: 0 0 20px

    .sub h2
      font-size: 14px

    ul li
      padding: 8px 0 0 44px
      min-height: 44px
      line-height: 1.3em
      font-size: 24px
      background: url('../images/list_button.png') no-repeat 0 4px

    .sub ul li
      padding: 4px 0 0 22px
      min-height: 22px
      line-height: 1.3em
      font-size: 14px
      background: url('../images/list_button_small.png') no-repeat 0 2px

    #create a
      display: inline-block
      padding: 0 0 0 44px
      margin: 10px 0 20px
      font-size: 24px
      background: url('../images/create_button.png') no-repeat 0 50%

      small
        display: block
        font-size: 0.6em

#created
  background: #ffffff url('../images/created_tick.png') no-repeat 99% 90%
  border: 1px solid #ccc
  border-radius: 20px
  padding: 20px

  h4
    font-size: 20px
    margin: 0 0 20px

  h5
    font-size: 16px
    a
      display: block

.feel
  float: right
  margin: 10px 0 0

#posted
  clear: both
  margin: 20px 0 0
  border-top: 1px dotted #cccccc
  padding: 20px 0 0

  .column
    float: left

    &.main
      width: 70%

    &.sub
      width: 30%


#footer
  overflow: hidden
  position: relative
  margin-top: -42px /* negative value of footer height */
  padding: 1px 0 0
  border-top: 1px solid #333333
  clear: both

  .inner
    background: #333333 /* Old browsers */
    background: -moz-linear-gradient(top,  #333333 0%, #121212 100%) /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#333333), color-stop(100%,#121212)) /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top,  #333333 0%,#121212 100%) /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top,  #333333 0%,#121212 100%) /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  #333333 0%,#121212 100%) /* IE10+ */
    background: linear-gradient(top,  #333333 0%,#121212 100%) /* W3C */
    height: 40px

  p
    margin: 0
    line-height: 40px
    font-size: 14px
    color: #ffffff

.angels
  color: #0099cc

  a
    color: #0099cc !important

.demons
  color: #ac292b

  a
    color: #ac292b !important
